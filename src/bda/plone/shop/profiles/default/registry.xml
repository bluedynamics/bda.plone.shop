<?xml version="1.0"?>
<registry>

  <records prefix="plone.bundles/bda-plone-shop"
           interface='Products.CMFPlone.interfaces.IBundleRegistry'>
    <value key="enabled">True</value>
    <value key="compile">False</value>
    <value key="jscompilation">++resource++bda.plone.shop/shop.js</value>
    <value key="csscompilation">++resource++bda.plone.shop/shop.min.css</value>
    <value key="depends">bdajax</value>
  </records>

  <!-- register settings from interfaces.
       Default values are set in the schema in order to keep
       customized settings after an upgrade step -->
  <records interface="bda.plone.shop.interfaces.IShopSettings" />

  <records interface="bda.plone.shop.interfaces.IShopCartSettings" />

  <records interface="bda.plone.shop.interfaces.IShopArticleSettings" />

  <records interface="bda.plone.shop.interfaces.IShopShippingSettings" />

  <records interface="bda.plone.shop.interfaces.IShopTaxSettings" />

  <records interface="bda.plone.shop.interfaces.INotificationTextSettings" />

  <records interface="bda.plone.shop.interfaces.IInvoiceSettings" />

  <records interface="bda.plone.shop.interfaces.IPaymentTextSettings" />

</registry>
